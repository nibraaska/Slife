<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context="com.slife.slife.BottomNavigation.Universities.View.UniversitiesFragment">


    <AutoCompleteTextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="match_parent"
            android:id="@+id/countryList"
            android:layout_margin="10dp"
            android:layout_height="wrap_content"
            android:completionThreshold="1"
            android:layout_gravity="top"
            android:hint="Country"
            android:textSize="15sp"/>

    <AutoCompleteTextView
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/countryList"
            app:layout_constraintLeft_toLeftOf="@id/countryList"
            android:id="@+id/collegesList"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:completionThreshold="1"
            android:layout_gravity="top"
            android:hint="College"
            android:textSize="15sp"/>

    <ProgressBar
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:visibility="gone"
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>